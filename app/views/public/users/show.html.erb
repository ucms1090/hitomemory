<div class="container">

  <h2>マイページ</h2>

  <div class="container">

    <div class="row">

      <div class="col-lg-6">
        <h4>ユーザー名</h4>
        <h4><%= @user.nickname %></h4>
        <h4>ユーザー画像</h4>
        <h4><%= image_tag @user.get_user_image(150,150) %></h4>
        <%= link_to 'プロフィール編集', edit_information_path, class: "btn btn-primary" %>
      </div>

      <div class="col-lg-6">
        <h4>繋がっているメモリー一覧</h4>
        <table border="2">
          <tbody>
            <% @memories.each do |memory| %>
            <tr>
              <td>
                <%= link_to memory.memory.memory_name, new_memory_session_path(memory_name: memory.memory.memory_name, memory_id: memory.memory.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>