<p id="notice"><%= notice %></p>

<div class="show">

  <p>
    <strong>タイトル</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>内容</strong>
    <%= @post.content %>
  </p>

  <p>
    <strong>日時</strong>
    <%= @post.start_time %>
  </p>

  <%= link_to '編集', edit_post_path(@post.id) %>
  <%= link_to '消去', post_path(@post.id), method: :delete, data: { confirm: '本当に?' } %>
  <%= link_to '戻る', memory_root_path %>

</div>